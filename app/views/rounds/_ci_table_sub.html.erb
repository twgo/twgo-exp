<div class="" role="tabpanel" data-example-id="togglable-tabs">
	<ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
		<li role="presentation">
			<a href="#<%= params[:ci_name] %>" role="tab" data-toggle="tab" aria-expanded="false">ALL</a>
		</li>
		<% params[:ci_group].uniq.each_with_index do |r,i| %>
			<li role="presentation">
				<a href="#<%= params[:ci_name]+i.to_s %>" role="tab" data-toggle="tab" aria-expanded="<%= i==0 ? 'true' : 'false' %>"><%= r %></a>
			</li>
		<% end %>
	</ul>
	<div id="myTabContent" class="tab-content">
		<div role="tabpanel" class="tab-pane fade" id="<%= params[:ci_name] %>">
			<%= render 'ci_table', params: {ci_data: params[:ci_data], tag: 'all'} %>
		</div>
		<% params[:ci_group].uniq.each_with_index do |r,i| %>
			<div role="tabpanel" class="<%= i==0 ? 'tab-pane fade active in' : 'tab-pane fade' %>" id="<%= params[:ci_name]+i.to_s %>">
				<%= render 'ci_table', params: {ci_data: params[:ci_data].where(branch: r)} %>
				<!-- <canvas id='<%# "#{params[:ci_name]}_#{i}" %>_lineChart'></canvas> -->
			</div>
		<% end %>
	</div>
</div>
