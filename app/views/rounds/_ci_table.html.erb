<table id="datatable-buttons" class="table table-striped table-bordered">
  <col width=5%/>
  <col width=20%/>
  <col width=40%/>
  <col width=10%/>
  <col width=5%/>
  <thead>
    <tr>
      <th>實驗</th>
      <th>說明</th>
      <th>註記 (shift + enter)</th>
      <th>操作</th>
      <th>錯誤率</th>
    </tr>
  </thead>
  <tbody>
    <% params[:ci_data].each do |r| %>
      <tr>
        <td><%= link_to "#{r.expid}", "http://10.32.0.120/job/#{r.jid}" %></td>
        <td><%= r.info %></td>
        <td>
          <%= form_for r, method: "patch" do |f| %>
            <%= f.text_area :label, style: 'width: 100%', class: 'label_area'%>
          <% end %>
        </td>
        <td>
          <%= link_to '💿', "http://10.32.0.120/job/#{r.jid}/docker", title: 'docker' %>
          <%= link_to "🎁", "https://github.com/twgo/#{r.repo}/commit/#{r.sha1}", title: 'code' %>
          <%= link_to "✏️", githubs_path(rid: r.id, repo: r.repo, branch: r.branch, sha: r.sha1), title: 'code' %>
        </td>
        <td><%= "#{r.rate}%" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
